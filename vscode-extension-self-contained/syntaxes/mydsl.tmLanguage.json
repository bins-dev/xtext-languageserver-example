{
    "name": "StructuredText",
    "scopeName": "text.st",
    "fileTypes": [
        "st"
    ],
    "repository": {
        "general": {
            "patterns": [
                {
                    "include": "#linecomment"
                },
                {
                    "include": "#blockcomment"
                },
                {
                    "include": "#keyword"
                }
            ]
        },
        "linecomment": {
            "name": "comment.line.double-dash.st",
            "begin": "(^[ \\t]+)?(?=//)",
            "end": "(?=$)"
        },
        "blockcomment": {
            "name": "comment.block.st",
            "begin": "/\\*(\\*)?(?!/)",
            "end": "\\*/"
        },
        
        "keyword": {
            "name": "keyword.control.st",
            "match": "\\b(VAR|END_VAR|IF|THEN|ELSIF|ELSE|END_IF|WHILE|DO|END_WHILE|FOR|TO|END_FOR|CASE|OF|END_CASE|RETURN|DINT|INT|SINT|LINT|UINT|USINT|UDINT|ULINT|REAL|LREAL|STRING|WSTRING|CHAR|WCHAR|TIME|LTIME|TIME_OF_DAY|LTIME_OF_DAY|TOD|LTOD|DATE|LDATE|DATE_AND|TIME|LDATE_AND_TIME|BOOL|LWORD|DWORD|WORD|BYTE|FALSE|TRUE|ARRAY)\\b|!"
        }
    },
    "patterns": [
        {
            "include": "#general"
        }
    ],
    "uuid": "8383e49a-fa0d-4bb5-827b-10e8abb294ca"
}